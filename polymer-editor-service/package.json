{
  "name": "polymer-editor-service",
  "version": "1.5.0",
  "description": "Static analysis for the web in your text editor!",
  "homepage": "https://github.com/Polymer/polymer-editor-service",
  "bugs": "https://github.com/Polymer/polymer-editor-service/issues",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/Polymer/polymer-editor-service.git"
  },
  "scripts": {
    "clean": "mkdir -p lib/ && rm -rf lib/ && mkdir -p lib/test && cp -r src/test/static lib/test/",
    "build": "tsc",
    "prepublishOnly": "npm run clean && npm run build",
    "lint": "tslint --project ./tsconfig.json",
    "test": "npm run clean && npm run build && mocha && npm run lint",
    "quicktest": "export QUICK_TESTS=true; npm run build || true && mocha",
    "test:watch": "watchy -w src/ -- npm run quicktest --loglevel=silent",
    "format": "find src test | grep '\\.js$\\|\\.ts$' | xargs ./node_modules/.bin/clang-format --style=file -i"
  },
  "devDependencies": {
    "@types/chai": "^4",
    "@types/mocha": "^2.2.28",
    "chai": "^4",
    "chai-subset": "^1.3.0",
    "clang-format": "=1.0.45",
    "memory-streams": "^0.1.0",
    "mocha": "^3",
    "source-map-support": "^0.4.2",
    "tslint": "^5",
    "typescript": "^2.4.2",
    "watchy": "^0.7"
  },
  "dependencies": {
    "@types/node": "^6",
    "@types/parse5": "^2.2.34",
    "@types/split": "^0.3.28",
    "@types/winston": "^2.2.0",
    "dom5": "^2.0.1",
    "parse5": "^2.2.3",
    "plylog": "^0.5.0",
    "polymer-analyzer": "^2",
    "polymer-linter": "^2",
    "polymer-project-config": "^3.0.0",
    "split": "^1.0.0",
    "vscode-languageserver": "^3.0.5",
    "vscode-uri": "^1.0.0",
    "winston": "^2.3.1"
  },
  "engines": {
    "node": ">=6"
  }
}
